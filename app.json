{
  "expo": {
    "name": "Inventoree",
    "slug": "inventoree",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/Inventoree Icon.png",
    "scheme": "inventoree",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/Inventoree Icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "android": {
      "package": "com.jobadams.inventoree",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/Inventoree Icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "INTERNET",
        "ACCESS_NETWORK_STATE",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "ios": {
      "bundleIdentifier": "com.jobadams.inventoree",
      "supportsTablet": true,
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera for scanning product barcodes."
      }
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "YOUR_PROJECT_ID"
      }
    },
    "plugins": [
      "expo-sqlite"
    ]
  }
}
